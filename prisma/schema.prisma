generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  eth_address String
  signed_message String
  signature String
  nonce String
  timestamp DateTime @default(now())
  message_data String
  is_verified Boolean
}

model Todo {
  id Int @id @default(autoincrement())
  name String
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}